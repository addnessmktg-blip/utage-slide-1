{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Video Downloader",
  "version": "0.1.0",
  "identifier": "com.videodownloader.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Video Downloader",
        "width": 500,
        "height": 600,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": []
  },
  "plugins": {
    "http": {
      "enabled": true,
      "scope": ["https://**", "http://**"]
    }
  }
}
